{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "compilerOptions": {
      "strict": false,
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
